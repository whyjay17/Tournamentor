<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ykim164cs242.tournamentor.Activity.StartMenuActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="275dp"
        android:layout_height="96dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="66dp"
        android:text="If you are a participant of an ongoing tournament/league, select this option to join your tournament/league channel."
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.126" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="264dp"
        android:layout_height="112dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="If you are a member of a tournament/league hosting organization, or want to open up a channel for a tournament/league, select this option."
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/admin_mode_button"
        android:layout_width="163dp"
        android:layout_height="51dp"
        android:layout_marginBottom="82dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:drawablePadding="5dp"
        android:text="Admin Mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_channel_button"
        app:layout_constraintVertical_bias="0.666"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/join_channel_button"
        android:layout_width="163dp"
        android:layout_height="51dp"
        android:text="Join Channel"
        android:drawableLeft="@drawable/ic_group_work_black_24dp"
        android:drawablePadding="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="76dp"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="8dp" />


</android.support.constraint.ConstraintLayout>
