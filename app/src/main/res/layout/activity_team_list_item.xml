<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ykim164cs242.tournamentor.ListItem.MatchListItem">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/team_name_text"
            android:layout_width="wrap_content"
            android:text="Name"
            android:textColor="#FF5733"
            android:gravity="left"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/team_name_item"
            android:text="teamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="90dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/team_foundation_year_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foundation"
            android:textStyle="bold"
            android:textColor="#FF5733"
            android:gravity="left"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/team_foundation_year_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YEAR"
            android:gravity="left"
            android:layout_marginLeft="90dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </TableRow>

    <TableRow
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/team_captain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Captain"
            android:textStyle="bold"
            android:textColor="#FF5733"
            android:gravity="left"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/team_captain_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="captainName"
            android:layout_marginLeft="90dp"
            android:gravity="left"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </TableRow>
</TableLayout>
